<fieldset>
    
    <a href="#" class="next" data-current-block="2" data-next-block="1">
        <legend>
            <h3>Step 2</h3>
            <span>Enter your details</span>
            <i class="g-forms__step--status"></i>
        </legend>
    </a>

    <div class="g-forms__step g-forms__step--2">
    
        <!-- FORM element : EMAIL -->
        <div class="g-forms__element">
            <label for="g-forms__email">Email<i>*</i><span>(make sure it's correct!)</span></label>

            <input type="email" name="email" id="g-forms__email" placeholder="Type your email address" 
            
            data-parsley-required="true"
            data-parsley-trigger="focusout" 
            data-parsley-error-message="Enter a valid email address." 
            data-parsley-errors-container="#g-forms__element-error--email"
            data-parsley-group="g-forms__step--2"
            >

            <span class="g-forms__element--status"></span>
            
            <div class="g-forms__element--error" id="g-forms__element-error--email"></div>

        </div>

        <!-- FORM element : TITLE [SELECT] -->
        <div class="g-forms__element">
            <label for="g-forms__title">Title<i>*</i><span></span></label>
            
            <div class="g-forms__select reduced-width">

                <i class="select-arrow glyphicon glyphicon-menu-down"></i>
                
                <select id="g-forms__title"
                
                data-parsley-required="true"
                data-parsley-trigger="change" 
                data-parsley-min-value="Mr"
                data-parsley-error-message="Select an option." 
                data-parsley-errors-container="#g-forms__element-error--title"
                data-parsley-group="g-forms__step--2"
                
                >
                    <option value="">Select...</option>
                    <option value="Mr">Mr</option>
                    <option value="Mrs">Mrs</option>
                    <option value="Miss">Miss</option>
                    <option value="Ms">Ms</option>
                    <option value="Dr">Dr</option>
                    <option value="Professor">Professor</option>
                    <option value="Other">Other</option>
                </select>
            </div>

            <div class="g-forms__element--error" id="g-forms__element-error--title"></div>

        </div>

        <!-- FORM element : FIRST NAME -->
        <div class="g-forms__element">
            <label for="g-forms__firstname">First name<i>*</i></label>

            <input type="text" name="firstname" id="g-forms__firstname" placeholder="Type..." 
            
            data-parsley-length="[2, 255]"
            data-parsley-required="true" 
            data-parsley-trigger="focusout"                              
            data-parsley-error-message="Enter text." 
            data-parsley-errors-container="#g-forms__element-error--firstname"
            data-parsley-group="g-forms__step--2"
            >

            <span class="g-forms__element--status"></span>
            
            <div class="g-forms__element--error" id="g-forms__element-error--firstname"></div>
        </div>

        <!-- FORM element : LAST NAME-->
        <div class="g-forms__element">
            <label for="g-forms__lastname">Last name<i>*</i></label>

            <input type="text" name="lastname" id="g-forms__lastname" placeholder="Type..." 
            
            data-parsley-length="[2, 255]"
            data-parsley-required="true" 
            data-parsley-trigger="blur" 
            data-parsley-error-message="Enter text." 
            data-parsley-errors-container="#g-forms__element-error--lastname"
            data-parsley-group="g-forms__step--2"
            >

            <span class="g-forms__element--status"></span>
            
            <div class="g-forms__element--error" id="g-forms__element-error--lastname"></div>
        </div>

        <!-- FORM element : MOBILE -->
        <div class="g-forms__element">
            <label for="g-forms__mobile">Mobile</label>

            <input type="text" name="mobile" id="g-forms__mobile" placeholder="Type..."
            
            data-parsley-length="[8, 20]"
            data-parsley-pattern="^\+?[()0-9 ]+$"
            data-parsley-required="false" 
            data-parsley-trigger="focusout" 
            data-parsley-error-message="Enter number." 
            data-parsley-errors-container="#g-forms__element-error--mobile"
            
            >

            <span class="g-forms__element--status"></span>
            
            <div class="g-forms__element--error" id="g-forms__element-error--mobile"></div>

            <p>So we can send you motivational messages and info about Face a Fear.</p>
        </div>

        <!-- FORM element : POSTCODE -->
        <div class="g-forms__element">
            <label for="g-forms__postcode">Postcode<i>*</i></label>

            <input type="text" name="postcode" id="g-forms__postcode" class="reduced-width" placeholder="Type your postcode..." 
            
            data-parsley-pattern="^([Gg][Ii][Rr] 0[Aa]{2})|((([A-Za-z][0-9]{1,2})|(([A-Za-z][A-Ha-hJ-Yj-y][0-9]{1,2})|(([A-Za-z][0-9][A-Za-z])|([A-Za-z][A-Ha-hJ-Yj-y][0-9]?[A-Za-z]))))\s?[0-9][A-Za-z]{2})$" 
            data-parsley-required="true" 
            data-parsley-trigger="keyup focusout paste" 
            data-parsley-error-message="Enter postcode." 
            data-parsley-errors-container="#g-forms__element-error--postcode"
            data-parsley-group="g-forms__step--2"
            >

            <span class="g-forms__element--status"></span>
            
            <div class="g-forms__element--error" id="g-forms__element-error--postcode"></div>
        </div>

        <!-- FORM element : BUTTON -->
        <div class="g-forms__element no-pad">
            
            <a href="#" class="button-red disabled" id="g-forms__button--lookup-address">Find address <i class="glyphicon glyphicon-menu-right"></i></a>

        </div>

        <!-- FORM element : ADDRESS LOOKUP [SELECT] -->
        <div class="g-forms__element address-lookup lookup-hidden">
            <label for="g-forms__address-lookup">Select an address</label>
            
            <div class="g-forms__select">
                <i class="select-arrow glyphicon glyphicon-menu-down"></i>
                
                <select id="g-forms__address-lookup">
                    <option value="">Select your address</option>
                </select>
            </div>

        </div>

        <!-- FORM element : ADDRESS 1 -->
        <div class="g-forms__element">
            <label for="g-forms__address1">Address<i>*</i></label>

            <input type="text" name="address1" id="g-forms__address1" placeholder="Type..." 
            
            data-parsley-length="[2, 255]"
            data-parsley-required="true" 
            data-parsley-trigger="focusout" 
            data-parsley-error-message="Enter text." 
            data-parsley-errors-container="#g-forms__element-error--address1"
            data-parsley-group="g-forms__step--2"
            >

            <span class="g-forms__element--status"></span>
            
            <div class="g-forms__element--error" id="g-forms__element-error--address1"></div>
        </div>

        <!-- FORM element : ADDRESS 2 -->
        <div class="g-forms__element address-hidden">
            
            <label for="g-forms__address2">Address line 2</label>

            <input type="text" name="address2" id="g-forms__address2" placeholder="Address line 2">

        </div>

        <!-- FORM element : ADDRESS 3 -->
        <div class="g-forms__element address-hidden">
            
            <label for="g-forms__address3">Address line 3</label>

            <input type="text" name="address3" id="g-forms__address3" placeholder="Address line 3">

        </div>

        <div class="g-forms__element no-pad">
            <a href="#" class="g-forms__element--control-address">+Add address line</a>
        </div>

        <!-- FORM element : TOWN / CITY -->
        <div class="g-forms__element">
            <label for="g-forms__towncity">Town/City<i>*</i></label>

            <input type="text" name="towncity" id="g-forms__towncity" placeholder="Type..." 
            
            data-parsley-length="[2, 255]"
            data-parsley-required="true" 
            data-parsley-trigger="focusout" 
            data-parsley-error-message="Enter text." 
            data-parsley-errors-container="#g-forms__element-error--towncity"
            data-parsley-group="g-forms__step--2"
            >

            <span class="g-forms__element--status"></span>
            
            <div class="g-forms__element--error" id="g-forms__element-error--towncity"></div>
        </div>

        <!-- FORM element : COUNTY -->
        <div class="g-forms__element">
            
            <label for="g-forms__mobile">County</label>

            <input type="text" name="county" id="g-forms__county" placeholder="Type...">

        </div>

        <!-- ********************************** -->
        <!-- FORM element : JOIN THE FIGHT -->
        <!-- ********************************** -->

        <div class="g-forms__element">
            <label>Help us beat heartbreak forever <i>*</i></label>
            <p>We would love to send you information on our life saving research and how you can help us to keep more hearts beating through fundraising, events and volunteering opportunities.</p>
            <p>Please tick below to tell us how you want to hear from us*:</p>

            <div class="g-forms__radio g-forms__radio--header">
                <span class="g-forms__radio--label"></span>
                <label class="g-forms__radio--element">Yes</label>
                <label class="g-forms__radio--element">No</label>
            </div>

            <!-- JOIN: EMAIL -->
            <div class="g-forms__radio" id="g-forms__jointype-email">
                <span class="g-forms__radio--label">Email<i>*</i></span>
                <label class="g-forms__radio--element" for="g-forms__jointype-email-yes">
                    <!-- The "name" attribute has to be the same within the same form, but unique for every instance of a component -->
                    
                    <input type="radio" id="g-forms__jointype-email-yes" name="jointype-email" value="jointype-email-yes"
                    
                    data-parsley-required="true"
                    data-parsley-trigger="click" 
                    data-parsley-class-handler="#g-forms__jointype-email"
                    data-parsley-group="g-forms__step--2"
                    data-parsley-multiple="jointype-email"
                    data-parsley-errors-messages-disabled

                    >
                    <i></i>
                </label>

                <label class="g-forms__radio--element" for="g-forms__jointype-email-no"> 
                    <input type="radio" id="g-forms__jointype-email-no" name="jointype-email" value="jointype-email-no"
                    
                    data-parsley-required="true" 
                    data-parsley-trigger="click"
                    data-parsley-class-handler="#g-forms__jointype-email"
                    data-parsley-group="g-forms__step--2"
                    data-parsley-multiple="jointype-email" 
                    data-parsley-errors-messages-disabled
                    
                    >
                    <i></i>
                </label>

                <span class="g-forms__element--status"></span>
            </div>

            <!-- JOIN: TEXT -->
            <div class="g-forms__radio" id="g-forms__jointype-text">
                <span class="g-forms__radio--label">Text<i>*</i></span>
                <label class="g-forms__radio--element" for="g-forms__jointype-text-yes">
                    <!-- The "name" attribute has to be the same within the same form, but unique for every instance of a component -->
                    
                    <input type="radio" id="g-forms__jointype-text-yes" name="jointype-text" value="jointype-text-yes"

                    data-parsley-required="true"
                    data-parsley-trigger="click" 
                    data-parsley-class-handler="#g-forms__jointype-text"
                    data-parsley-group="g-forms__step--2"
                    data-parsley-multiple="jointype-text" 
                    data-parsley-errors-messages-disabled

                    >
                    <i></i>
                </label>

                <label class="g-forms__radio--element" for="g-forms__jointype-text-no"> 
                    <input type="radio" id="g-forms__jointype-text-no" name="jointype-text" value="jointype-text-no"
                    
                    data-parsley-required="true"
                    data-parsley-trigger="click" 
                    data-parsley-class-handler="#g-forms__jointype-text"
                    data-parsley-group="g-forms__step--2"
                    data-parsley-multiple="jointype-text"
                    data-parsley-errors-messages-disabled

                    >
                    <i></i>
                </label>

                <span class="g-forms__element--status"></span>
            </div>

            <!-- JOIN: POST -->
            <div class="g-forms__radio" id="g-forms__jointype-post">
                <span class="g-forms__radio--label">Post<i>*</i></span>
                <label class="g-forms__radio--element" for="g-forms__jointype-post-yes">
                    <!-- The "name" attribute has to be the same within the same form, but unique for every instance of a component -->
                    
                    <input type="radio" id="g-forms__jointype-post-yes" name="jointype-post" value="jointype-post-yes"
                    
                    data-parsley-required="true"
                    data-parsley-trigger="click" 
                    data-parsley-class-handler="#g-forms__jointype-post"
                    data-parsley-group="g-forms__step--2"
                    data-parsley-multiple="jointype-post"
                    data-parsley-errors-messages-disabled


                    >
                    <i></i>
                </label>

                <label class="g-forms__radio--element" for="g-forms__jointype-post-no"> 
                    <input type="radio" id="g-forms__jointype-post-no" name="jointype-post" value="jointype-post-no"
                    
                    data-parsley-required="true"
                    data-parsley-trigger="click" 
                    data-parsley-class-handler="#g-forms__jointype-post"
                    data-parsley-group="g-forms__step--2"
                    data-parsley-multiple="jointype-post"
                    data-parsley-errors-messages-disabled

                    >

                    <i></i>
                </label>

                <span class="g-forms__element--status"></span>
            </div> 

            <!-- JOIN: PHONE -->
            <div class="g-forms__radio" id="g-forms__jointype-phone">
                <span class="g-forms__radio--label">Phone<i>*</i></span>
                <label class="g-forms__radio--element" for="g-forms__jointype-phone-yes">
                    <!-- The "name" attribute has to be the same within the same form, but unique for every instance of a component -->
                    
                    <input type="radio" id="g-forms__jointype-phone-yes" name="jointype-phone" value="jointype-phone-yes"
                    
                    data-parsley-required="true"
                    data-parsley-trigger="click" 
                    data-parsley-class-handler="#g-forms__jointype-phone"
                    data-parsley-group="g-forms__step--2"
                    data-parsley-multiple="jointype-phone"
                    data-parsley-errors-messages-disabled


                    >

                    <i></i>
                </label>

                <label class="g-forms__radio--element" for="g-forms__jointype-phone-no"> 
                    <input type="radio" id="g-forms__jointype-phone-no" name="jointype-phone" value="jointype-phone-no"
                    
                    data-parsley-required="true"
                    data-parsley-trigger="click" 
                    data-parsley-class-handler="#g-forms__jointype-phone"
                    data-parsley-group="g-forms__step--2"
                    data-parsley-multiple="jointype-phone"
                    data-parsley-errors-messages-disabled


                    >
                    
                    <i></i>
                </label>

                <span class="g-forms__element--status"></span>
            </div>
           

        </div>
        <!-- ********************************** -->

       

        <!-- FORM element : BUTTON -->
        <div class="g-forms__element">

            <a href="#" class="button-red next" data-current-block="2" data-next-block="3">Continue <i class="glyphicon glyphicon-menu-right"></i></a>
            
        </div>


        <p class="g-forms__validation-notice hidden"><i>*</i> Please complete all required fields before pressing continue.</p>

        <!-- NOTICE -->

        <div class="g-forms__notice">
            * We take your privacy seriously and will never sell or swap your details with third parties. You can withdraw your consent to be contacted at any time by calling 0300 330 3322 or by emailing <a href="mailto:supporterservices@bhf.org.uk">supporterservices@bhf.org.uk</a>. Information about how we protect and use your personal data is set out in our privacy policy: <a href="http://bhf.org.uk/privacy" target="new">bhf.org.uk/privacy</a>
        </div>
    
    </div>

</fieldset>

