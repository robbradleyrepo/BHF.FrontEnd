<fieldset class="active">

    <a href="#" class="next" data-current-block="1" data-next-block="1">
        <legend>
            <h3>Step 1</h3>
            <i class="g-forms__step--status"></i>
        </legend>
    </a>

    <div class="g-forms__step g-forms__step--1">

        <!-- FORM element : SELECT -->
        <div class="g-forms__element">
            <label for="g-forms__title">Select...<i>*</i><span></span></label>
            
            <div class="g-forms__select">
                <i class="select-arrow glyphicon glyphicon-menu-down"></i>
                
                <select id="g-forms__fear"
                
                data-parsley-required="true"
                data-parsley-trigger="change focusout" 
                data-parsley-min-value="option1"
                data-parsley-error-message="Select an option." 
                data-parsley-errors-container="#g-forms__element-error--fear"
                data-parsley-group="g-forms__step--1"
                
                >
                    <option value="">Select...</option>
                    <option value="option1">Option 1</option>
                    <option value="option2">Option 2</option>
                    <option value="option3">Option 3</option> 
                </select>
            </div>
            
            <div class="g-forms__element--error" id="g-forms__element-error--fear"></div>

        </div>


        <!-- FORM element : INPUT [NUMERIC ONLY] -->
        <div class="g-forms__element">
            <label for="g-forms__amount">Enter a number...<i>*</i></label>

            <i class="pound-sign">Â£</i>
            <input type="number" name="amount" min="1" id="g-forms__amount" placeholder="" 
            
            data-parsley-validation-threshold="1"
            data-parsley-required="true"
            data-parsley-type="integer" 
            data-parsley-trigger="focusout paste" 
            data-parsley-error-message="Enter numbers only." 
            data-parsley-errors-container="#g-forms__element-error--amount"
            data-parsley-group="g-forms__step--1"
            >

            <span class="g-forms__element--status"></span>
            
            <div class="g-forms__element--error" id="g-forms__element-error--amount"></div>
        </div>

        <!-- FORM element : Disclaimer [CHECKBOX] -->
        <div class="g-forms__element">

            <div class="g-forms__element__header"> Checkbox</div>
        
            <div class="g-forms__checkbox">
            
                <input type="checkbox" id="g-forms__disclaimer"
                
                data-parsley-checkmin="1",
                data-parsley-required="true"
                data-parsley-trigger="focusout"
                data-parsley-error-message="Custom error message" 
                data-parsley-errors-container="#g-forms__element-error--disclaimer"
                data-parsley-group="g-forms__step--1"
                
                >
                
                <label for="g-forms__disclaimer">Confirm checkbox<i>*</i><span></span></label>
            
            </div>

            <div class="g-forms__element--error" id="g-forms__element-error--disclaimer"></div>

        </div>

        <!-- FORM element : BUTTON -->
        <div class="g-forms__element">
            
            <a href="#" class="button-red next" data-current-block="1" data-next-block="2">Continue <i class="glyphicon glyphicon-menu-right"></i></a>

        </div>

        <p class="g-forms__validation-notice hidden"><i>*</i> Please complete all required fields before pressing continue.</p>

    </div>

</fieldset>

