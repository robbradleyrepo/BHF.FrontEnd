<!-- FORM element : TYPE = INPUT [CORE] -->  
<div class="f-forms__element" id="f-forms__element__0">
    <label for="f-forms__element-input__0">
        <span class="f-forms__element--label">Input [Core]</span>
        <span class="f-forms__element--sublabel">This is some help text to further explain the question</span>
    </label>

    <input type="text" name="" id="f-forms__element-input__0"
    
    class="f-forms__element--actual"

    data-parsley-trigger="focusout"
    data-parsley-trigger-after-failure="focusout"        
    data-parsley-length="[2, 255]"
    data-parsley-length-message="Must be between 2 and 255 characters."
    data-parsley-required="true"
    data-parsley-required-message="This is a required field." 
    data-parsley-class-handler="#f-forms__element__0"
    data-parsley-errors-container="#f-forms__element-error__0" 
    data-parsley-whitespace="trim"

    aria-required="true"
    aria-describedby="f-forms__element-error__0"
        
    >

    <span class="f-forms__element--status"></span>
    
    <div class="f-forms__element--error" id="f-forms__element-error__0" role="alert" aria-live="polite"><span></span></div>
</div>