 <!-- FORM element : TYPE = INPUT [EMAIL CONFIRM] -->
<div class="f-forms__element" id="f-forms__element__334">
    <label for="f-forms__element-input__334">
        <span class="f-forms__element--label">Confirm Email [Core]</span>
        <span class="f-forms__element--sublabel">This is some help text to further explain the question</span>
    </label>

    <input id="f-forms__element-input__334" 
    
    class="f-forms__element--actual" 

    type="email" 
    data-parsley-trigger="focusout"
    data-parsley-trigger-after-failure="focusout"
    data-parsley-required="true"
    data-parsley-required-message="Must be a valid email address."
    data-parsley-class-handler="#f-forms__element__334"
    data-parsley-errors-container="#f-forms__element-error__334"
    data-parsley-whitespace="trim"
    data-parsley-equalto="#f-forms__element-input__3"
    data-parsley-equalto-message="Please ensure your email address matches."

    aria-required="true"
    aria-describedby="f-forms__element-error__334"

    >

    <span class="f-forms__element--status"></span>
    
    <div class="f-forms__element--error" id="f-forms__element-error__334" role="alert" aria-live="polite"><span></span></div>

</div>